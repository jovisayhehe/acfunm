<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AcTheme" parent="@style/Theme.Sherlock.Light">
        <!-- <item name="homeAsUpIndicator">@drawable/new_indicator</item>
        <item name="android:homeAsUpIndicator">@drawable/new_indicator</item> -->
        <item name="actionBarStyle">@style/ACActionBar</item>
        <item name="android:actionBarStyle">@style/ACActionBar</item>

        <item name="android:actionBarTabStyle">@style/ACTabStyle</item>
        <item name="actionBarTabStyle">@style/ACTabStyle</item>
        
        <item name="android:actionBarTabBarStyle">@style/AcTabBarStyle</item>
        <item name="actionBarTabBarStyle">@style/AcTabBarStyle</item>

        <item name="android:actionBarItemBackground">@drawable/selectable_background</item>
        <item name="actionBarItemBackground">@drawable/selectable_background</item>
        <item name="actionBarTabTextStyle">@style/AcTabBarText</item>
        <item name="android:actionBarTabTextStyle">@style/AcTabBarText</item>
        <item name="android:editTextStyle">@style/ACEditTextStyle</item>
        <item name="android:windowBackground">@color/main_win_bg</item>
        <item name="android:checkboxStyle">@style/ACCheckBox</item>
        <item name="android:radioButtonStyle">@style/ACRadioButton</item>
    </style>

    <style name="AcTabBarStyle" parent="Widget.Sherlock.Light.ActionBar.TabBar">
        <item name="android:dividerPadding">0dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="ACTabStyle" parent="Widget.Sherlock.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab</item>
        <item name="background">@drawable/tab_indicator_ab</item>
    </style>

    <style name="OrangeListView" parent="@style/Widget.Sherlock.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background</item>
        <item name="android:divider">@drawable/listview_divider</item>
        <item name="android:dividerHeight">2px</item>
    </style>

    <style name="ACSpinnerStyle" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/action_bar_spinner</item>
        <item name="android:dropDownSelector">@drawable/selectable_background</item>
    </style>

    <style name="AcTabBarText" parent="Widget.Sherlock.Light.ActionBar.TabText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ACActionBar" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent</item>
        <item name="background">@drawable/ab_transparent</item>
    </style>

    <style name="ACEditTextStyle" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ACCheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check_holo_light</item>
    </style>

    <style name="ACRadioButton" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/btn_radio_holo_light</item>
    </style>

   
    
</resources>