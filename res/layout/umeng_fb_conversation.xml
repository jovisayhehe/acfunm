<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="#E0E0E0">
	<TextView android:id="@+id/umeng_fb_conversation_title"
		android:layout_width="fill_parent" android:textColor="#565656"
		android:layout_height="50dip" android:layout_gravity="center"
		android:gravity="center" android:text="@string/UMFeedbackConversationTitle" android:textSize="22dip"
		android:background="@drawable/umeng_fb_bar_bg" />

	<com.umeng.fb.ui.ThreadView android:id="@+id/android:list"
		android:layout_gravity="top" android:layout_width="fill_parent"
		android:layout_weight="1.0" android:layout_height="wrap_content"
		android:background="#EFEFEF" android:divider="#EFEFEF"
		android:cacheColorHint="#EEEEEE" />
	<View android:layout_height="1dip" android:layout_width="fill_parent"
		android:background="#d5d5d5" />
	<View android:layout_height="1dip" android:layout_width="fill_parent"
		android:background="#c6c6c6" />
	<RelativeLayout android:id="@+id/umeng_fb_bottom_sub"
		android:background="@drawable/umeng_fb_bottom_banner"
		android:layout_gravity="bottom" android:gravity="center_vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:paddingTop="5dip" android:paddingBottom="2dip"
		android:orientation="horizontal">
		<EditText android:id="@+id/umeng_fb_editTxtFb"
			android:layout_width="fill_parent" android:layout_marginLeft="8dip"
			android:layout_height="wrap_content" android:maxLines="2"
			android:layout_weight="1" android:layout_alignParentLeft="true"
			android:layout_toLeftOf="@+id/umeng_fb_btnSendFb" />
		<Button android:id="@+id/umeng_fb_btnSendFb"
			android:layout_width="70dip" android:layout_height="40dip"
			android:layout_marginLeft="12dip" android:layout_marginRight="6dip"
			android:layout_alignParentRight="true" android:layout_centerVertical="true"
			android:background="@drawable/umeng_fb_submit_selector"
			android:text="@string/UMFeedbackSummit" android:textColor="#FFFFFF" />
	</RelativeLayout>
</LinearLayout>
