<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tv.avfun"
    
    android:versionCode="80"
    android:versionName="0.8.0" 
    >
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
	<uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

	<instrumentation android:name="android.test.InstrumentationTestRunner" android:targetPackage="tv.avfun"></instrumentation>
    <application
        android:name="tv.avfun.app.AcApp"
        android:largeHeap="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_launcher"
        android:allowBackup='true'
        android:theme="@style/AcTheme"
        >
        <uses-library android:name="android.test.runner"/> 
        <activity
            android:name="tv.avfun.SplashActivity"
            android:screenOrientation="portrait" 
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout"
            android:theme="@style/Theme.Sherlock.NoActionBar"
            android:noHistory="true"
             >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        </activity>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout"
            >
            <meta-data android:name="android.app.default_searchable"
                       android:value=".SearchResultActivity" />
        </activity>
        <activity
            android:name=".SearchResultActivity"
            android:launchMode="singleTop"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable" android:resource="@xml/searchable" />
        </activity>
        
        <activity 
        android:name=".ChannelActivity"
        />
        <activity 
        android:name=".DetailActivity" android:uiOptions="splitActionBarWhenNarrow">
            <meta-data android:name="android.app.default_searchable"
                       android:value=".SearchResultActivity" />
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="av"/>
            </intent-filter>
        </activity>
        <activity 
        android:name=".CommentsActivity"
        />
        <activity 
        android:name=".SettingsActivity"
        />
        <activity 
        android:name=".WebViewActivity"
        />
        <activity 
        android:name=".HistoryActivity"
        />
        <activity 
        android:name=".ImagePagerActivity"
        />
        <activity 
        android:name=".PlayActivity"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
        android:configChanges="orientation|keyboardHidden|screenSize|screenLayout"
		android:screenOrientation="landscape" 
        />
        
        <activity
        android:name="io.vov.vitamio.activity.InitActivity"
        android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
        android:launchMode="singleTop"
        android:theme="@android:style/Theme.NoTitleBar"
        android:windowSoftInputMode="stateAlwaysHidden" />
        <activity 
        android:name="tv.avfun.FavoriteActivity"
        />
        <activity 
        android:name="tv.avfun.SectionActivity"
        />
        <activity android:name="tv.avfun.DownloadManActivity" android:uiOptions="splitActionBarWhenNarrow"/>
        <service
            android:name="com.umeng.common.net.DownloadingService"
            android:exported="true"
            android:process=":DownloadingService" >
        </service>
        <service 
            android:name=".DownloadService"
            />
        <activity
            android:name="com.umeng.fb.ui.SendFeedback"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="com.umeng.fb.ui.FeedbackConversations" />
        <activity
            android:name="com.umeng.fb.ui.FeedbackConversation"
            android:configChanges="keyboard" />

         <meta-data android:value="50a79c105270152fbd00002f" android:name="UMENG_APPKEY"></meta-data>
		<meta-data android:value="AndroidMarket" android:name="UMENG_CHANNEL"/>
    </application>

</manifest>